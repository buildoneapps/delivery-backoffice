@model List<delivery.backoffice.API.Model.Proxy.SettingProxy>

@{
    ViewBag.Title = "Configurações";
    Layout = "_Layout";
}


<div class="page-title">

    <div class="title-env">
        <h1 class="title">Configurações</h1>
        <p class="description">Altere as configurações de toda a plataforma</p>
    </div>

    <div class="breadcrumb-env">

        <ol class="breadcrumb bc-1">
            <li>
                <a href="~/"><i class="fa-home"></i>Home</a>
            </li>
        </ol>
    </div>

</div>


<!-- Basic Setup -->
<div class="panel panel-default">
    <div class="panel-body">

        <script type="text/javascript">
            jQuery(document).ready(function($) {
                
                $("#example-1").dataTable({
                    "processing": true,
                    "serverSide": true,
                    "orderMulti": false,
                    "language": language,
                    "ajax": {
                        "url": "list",
                        "type": "POST",
                        "dataType": "json"
                    },
                    "columnDefs":  
                    [{  
                        "visible": false,  
                        "searchable": false  
                    }],  
                    "columns": [  
                        { "data": "name", "name": "Name", "width": "70%" },  
                        { "data": "value", "name": "Value", "width": "20%" },  
        
                        {   "width": "10%",
                            "render": function (data, type, full, meta)  
                                { return '<a class="btn btn-info" href="/DemoGrid/Edit/' + full.CustomerID + '">Editar</a>'; }  
                        }
                    ]  
                });
            });
        </script>

        <table id="example-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Configuração</th>
                <th>Valor</th>
                <th></th>
            </tr>
            </thead>

        </table>

    </div>
</div>