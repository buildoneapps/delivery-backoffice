@model delivery.backoffice.API.Model.Proxy.SettingProxy

@{
    ViewBag.Title = ViewData["Title"];
    Layout = "_Layout";
}
<!-- Basic Setup -->
<div class="panel panel-default">
    <div class="panel-body">

        <script type="text/javascript">
            jQuery(document).ready(function($) {
	            
	            $("#menu_settings").addClass("active");
	            ///Int or Dun
				if ($("#Type").val() == 0 || $("#Type").val() == 2) {
					$("#form-value").append("<input type=\"text\" value=\"@Model.Value\" class=\"form-control\" name=\"value\" data-validate=\"number,required\" data-message-required=\"Por favor, preencha esse campo!\" data-message-number=\"Por favor, preencha esse campo com números!\" placeholder=\"Campo obrigatório\">");
					
				}
	            else if ($("#Type").val() == 1) {
					$("#form-value").append("<textarea type=\"text\" style=\"height:300px\" class=\"form-control\" name=\"value\" data-validate=\"required\" data-message-required=\"Por favor, preencha esse campo!\" placeholder=\"Campo obrigatório\">@Model.Value</textarea>");
					
				}
            });
        </script>

        <form role="form" id="form1" method="post" action="/setting/edit" class="validate" novalidate="novalidate">
					
	        @Html.HiddenFor(h => h.Id)
	        @Html.HiddenFor(h => h.Key)
	        @Html.HiddenFor(h => h.SubKey)
	        @Html.HiddenFor(h => h.Type)
	        <div class="form-group">
		        <label class="control-label">Name</label>
				
		        <input type="text" disabled value="@Model.Name" class="form-control" name="name">
	        </div>
	        
	        <div class="form-group" id="form-value">
				<label class="control-label">Valor</label>
				
			</div>
			
			<div class="form-group">
				<button type="submit" class="btn btn-success">Salvar</button>
				<a class="btn btn-white" href="~/setting/index">Cancelar</a>
			</div>
					
		</form>

    </div>
</div>