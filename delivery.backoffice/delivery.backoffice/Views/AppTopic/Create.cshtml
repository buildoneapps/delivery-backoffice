@model delivery.backoffice.API.Model.Proxy.AppTopicProxy
@{
ViewBag.Title = ViewData["Title"];
Layout = "_Layout";
}


<!-- Basic Setup -->
<div class="panel panel-default">
    <div class="panel-body">


        <script type="text/javascript">
            jQuery(document).ready(function ($) {
                
                $("#menu_topics").addClass("active");
                
                $("#btnSubmit").on('click',
                    function () {
                        var editor = $('.CodeMirror')[0].CodeMirror;
                        $("#Description").val(editor.getValue());
                        
                        $("#Title").val($("#title").val());
                        
                        $("#Type").val($("#selectType").val());
                        $("#IsActive").val($('#isActive').is(":checked"));
                    });
                
                
                
            });
        </script>

        <form role="form" id="form1" method="POST" action="/apptopic/create" class="validate" novalidate="novalidate">

            @Html.HiddenFor(f => f.Id)
            @Html.HiddenFor(f => f.Title)
            @Html.HiddenFor(f => f.Description)
            @Html.HiddenFor(f => f.IsActive)
            @Html.HiddenFor(f => f.Type)
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
               
                        <label class="control-label">Name</label>

                        <input type="text" value="@Model.Title" class="form-control" id="title" name="title" data-validate="required" data-message-required="Por favor, preencha esse campo!">
           
                    </div>
                </div>
                
                <div class="form-group col-sm-3">
                    <label class="control-label">Tipo</label>

                    <select id="selectType" class="form-control">
                        <option value="0">Cliente</option>
                        <option value="1">Entregador</option>
                        <option value="2">Todos</option>
                    </select>
                </div>
                
                
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">Valor</label>
                        <div class="form-group">
                            <textarea class="form-control" id="txtDesc" rows="5" data-uk-htmleditor>@Model.Description</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-2">
                    <label class="control-label">Ativo</label>
                    <div class="form-block">
                        <input type="checkbox" name="isActive" id="isActive" checked="@Model.IsActive"
                               class="iswitch iswitch-secondary">
                    </div>

                </div>
            </div>

         
            <div class="form-group">
                <button type="submit" id="btnSubmit" class="btn btn-success">Salvar</button>
                <a class="btn btn-white" href="~/apptopic/index">Cancelar</a>
            </div>

        </form>

    </div>
</div>

