@model List<delivery.backoffice.API.Model.Proxy.SettingProxy>

@{
    ViewBag.Title = ViewData["Title"];
    Layout = "_Layout";
}


<!-- Basic Setup -->
<div class="panel panel-default">
    <div class="panel-body">

        <script type="text/javascript">
            jQuery(document).ready(function($) {
                $("#menu_drivers").addClass("active");
                $("#example-1").dataTable({
                    "processing": true,
                    "serverSide": true,
                    "orderMulti": false,
                    "language": language,
                    "ajax": {
                        "url": "list",
                        "type": "POST",
                        "dataType": "json"
                    },
                    "columnDefs":  
                    [
                        {  
                        "visible": false,  
                        "searchable": false
                        }
                    ],  
                    "columns": [  
                        { "data": "name", "name": "Name", "width": "44%" },  
                        { "data": "registerDate", "registerDate": "RegisterDate", "width": "20%", "className": "text-center" },  
                        { "data": "deliveryCount", "deliveryCount": "DeliveryCount", "width": "10%", "className": "text-center"},  
                        { "data": "level", "level": "Level", "width": "10%", "className": "text-center" },  
                        
                        {   "width": "8%",
                            "className": "text-center",
                            "render": function(data, type, full, meta) {
                                
                                if (full.isBlocked === true) {
                                    return '<input type="checkbox" disabled name="isActive" id="isActive" checked class="iswitch iswitch-red">';
                                } else {
                                    return '<input type="checkbox" disabled name="isActive" id="isActive" class="iswitch iswitch-red">';
                                }
                            }  
                        },
                        {   "width": "8%",
                            "orderable": false,
                            "className": "text-center",
                            "render": function (data, type, full, meta)  
                            { return '<a class="btn btn-icon btn-blue btn-xs" href="/driver/edit/' + full.id + '"><i class="fa-gear"></i></a>'; }  
                        }
                    ]  
                });
            });
        </script>

        <table id="example-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Data de Cadastro</th>
                <th>Entr.</th>
                <th>Situação</th>
                <th>Bloq.</th>
                <th></th>
            </tr>
            </thead>

        </table>

    </div>
</div>